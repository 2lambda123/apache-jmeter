								<phase>install</phase>
								<goals>
									<goal>install-file</goal>
								</goals>
								<configuration>
									<file>${maven.dir}/ApacheJMeter_jms.jar</file>
									<pomFile>${maven.dir}/ApacheJMeter_jms.pom</pomFile>
									<generatePom>false</generatePom>
