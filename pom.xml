									<generatePom>false</generatePom>
									<packaging>jar</packaging>
								</configuration>
							</execution>

							<execution>
								<id>ApacheJMeter_functions</id>
								<phase>install</phase>
								<goals>
									<goal>install-file</goal>
								</goals>
								<configuration>
									<file>${maven.dir}/ApacheJMeter_functions.jar</file>
									<pomFile>${maven.dir}/ApacheJMeter_functions.pom</pomFile>
									<generatePom>false</generatePom>
									<packaging>jar</packaging>
								</configuration>
							</execution>

							<execution>
								<id>ApacheJMeter_http</id>
								<phase>install</phase>
								<goals>
									<goal>install-file</goal>
								</goals>
								<configuration>
									<file>${maven.dir}/ApacheJMeter_http.jar</file>
