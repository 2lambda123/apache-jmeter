<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>com.afklm.maven.pom</groupId>
		<artifactId>af-projects-pom</artifactId>
		<version>3.8.0</version>
	</parent>

	<groupId>com.airfrance.qualif.jmeter</groupId>
	<artifactId>apache-jmeter</artifactId>
	<packaging>pom</packaging>
	<version>3.3-SNAPSHOT</version>

	<properties>
		<scmCommentPrefix>AFKLM-</scmCommentPrefix>
		<dist.dir>${basedir}/dist</dist.dir>
		<maven.dir>${dist.dir}/maven</maven.dir>
	</properties>

	<scm>
		<connection>scm:git:https://bitbucket.devnet.klm.com/scm/TCPOW/apache-jmeter.git</connection>
		<developerConnection>scm:git:https://bitbucket.devnet.klm.com/scm/TCPOW/apache-jmeter.git</developerConnection>
		<tag>master</tag>
		<url>https://bitbucket.devnet.klm.com/projects/TCPOW/repos/apache-jmeter/browse</url>
	</scm>

	<profiles>
		<profile>
			<id>package</id>

			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-antrun-plugin</artifactId>

						<!-- Lifecycle -->
						<executions>
							<!-- compile -->
							<execution>
								<id>compile</id>
								<configuration>
									<target>
										<ant target="compile">
											<property name="java.awt.headless" value="true" />
										</ant>
									</target>
								</configuration>
								<goals>
									<goal>run</goal>
								</goals>
								<phase>compile</phase>
							</execution>
							<!-- test -->
							<execution>
								<id>test</id>
								<configuration>
									<target>
										<ant target="gump-test">
											<property name="java.awt.headless" value="true" />
										</ant>
									</target>
								</configuration>
								<goals>
									<goal>run</goal>
								</goals>
								<phase>test</phase>
							</execution>

						</executions>
					</plugin>

				</plugins>
			</build>
		</profile>

		<profile>
			<id>release</id>

			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-antrun-plugin</artifactId>

						<!-- Lifecycle -->
						<executions>
							<!-- package -->
							<execution>
								<id>package</id>
								<configuration>
									<target>
										<ant target="distribution">
											<property name="java.awt.headless" value="true" />
											<property name="disable-svnCheck" value="true" />
											<property name="disable-check-versions" value="true" />
											<property name="jmeter.version" value="${project.version}" />
										</ant>
									</target>
								</configuration>
								<goals>
									<goal>run</goal>
								</goals>
								<phase>package</phase>
							</execution>
							
							<!-- Generates Maven JARs -->
							<execution>
								<id>_dist_maven</id>
								<configuration>
									<target>
										<ant target="_dist_maven">
											<property name="java.awt.headless" value="true" />
											<property name="jmeter.version" value="${project.version}" />
										</ant>
									</target>
								</configuration>
								<goals>
									<goal>run</goal>
								</goals>
								<phase>package</phase>
							</execution>
						</executions>
					</plugin>
					
					<plugin>
						<groupId>org.codehaus.mojo</groupId>
						<artifactId>build-helper-maven-plugin</artifactId>
						<version>1.12</version>
						
						<executions>
							<execution>
								<id>attach-zip</id>
								<phase>package</phase>
								<goals>
									<goal>attach-artifact</goal>
								</goals>
								<configuration>
									<artifacts>
										<artifact>
											<file>${dist.dir}/apache-jmeter-${project.version}.tgz</file>
											<type>tgz</type>
											<classifier>bin</classifier>
										</artifact>
									</artifacts>
								</configuration>
							</execution>
						</executions>
					</plugin>
					
					<plugin>
						<artifactId>maven-install-plugin</artifactId>
						<executions>
						
							<execution>
								<id>ApacheJMeter_parent</id>
								<phase>install</phase>
								<goals>
									<goal>install-file</goal>
								</goals>
								<configuration>
									<file>${maven.dir}/ApacheJMeter_parent.pom</file>
									<pomFile>${maven.dir}/ApacheJMeter_parent.pom</pomFile>
									<generatePom>false</generatePom>
									<packaging>pom</packaging>
								</configuration>
							</execution>

							<execution>
								<id>jorphan</id>
								<phase>install</phase>
								<goals>
									<goal>install-file</goal>
								</goals>
								<configuration>
									<file>${maven.dir}/jorphan.jar</file>
									<pomFile>${maven.dir}/jorphan.pom</pomFile>
									<generatePom>false</generatePom>
									<packaging>jar</packaging>
								</configuration>
							</execution>

							<execution>
								<id>ApacheJMeter_components</id>
								<phase>install</phase>
								<goals>
									<goal>install-file</goal>
								</goals>
								<configuration>
									<file>${maven.dir}/ApacheJMeter_components.jar</file>
									<pomFile>${maven.dir}/ApacheJMeter_components.pom</pomFile>
									<generatePom>false</generatePom>
									<packaging>jar</packaging>
								</configuration>
							</execution>

							<execution>
								<id>ApacheJMeter_config</id>
