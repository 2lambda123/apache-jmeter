								</configuration>
							</execution>

							<execution>
								<id>ApacheJMeter_java</id>
								<phase>install</phase>
								<goals>
									<goal>install-file</goal>
								</goals>
								<configuration>
									<file>${maven.dir}/ApacheJMeter_java.jar</file>
									<pomFile>${maven.dir}/ApacheJMeter_java.pom</pomFile>
									<generatePom>false</generatePom>
									<packaging>jar</packaging>
								</configuration>
							</execution>

							<execution>
								<id>ApacheJMeter_jdbc</id>
								<phase>install</phase>
								<goals>
									<goal>install-file</goal>
								</goals>
								<configuration>
									<file>${maven.dir}/ApacheJMeter_jdbc.jar</file>
									<pomFile>${maven.dir}/ApacheJMeter_jdbc.pom</pomFile>
									<generatePom>false</generatePom>
									<packaging>jar</packaging>
