									<pomFile>${maven.dir}/ApacheJMeter_config.pom</pomFile>
									<generatePom>false</generatePom>
									<packaging>jar</packaging>
								</configuration>
							</execution>

							<execution>
								<id>ApacheJMeter_core</id>
								<phase>install</phase>
								<goals>
									<goal>install-file</goal>
								</goals>
								<configuration>
									<file>${maven.dir}/ApacheJMeter_core.jar</file>
