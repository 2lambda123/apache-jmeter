<?xml version="1.0"?>

<project name="JMeter" default="start" basedir=".">

    <property name="maven.ant.tasks.dir" value="lib/build"/>
    <property name="maven.ant.tasks.remote.file" value="http://www.apache.org/dyn/closer.cgi/maven/binaries/maven-ant-tasks-2.1.3.jar"/>

    <target name="start">
        <mkdir dir="${maven.ant.tasks.dir}"/>
        <get src="${maven.ant.tasks.remote.file}" dest="${maven.ant.tasks.dir}"/>
        <ant antfile="get_dependencies.xml" target="download_packages">
            <property name="maven.ant.tasks.dir" value="${maven.ant.tasks.dir}"/>


        </ant>
    </target>

</project>